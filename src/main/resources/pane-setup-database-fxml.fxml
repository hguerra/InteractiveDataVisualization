<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<AnchorPane id="css-anchor-pane" fx:id="anchorPane" maxHeight="480.0" maxWidth="213.0" minHeight="480.0"
            minWidth="213.0" prefHeight="480.0" prefWidth="213.0" stylesheets="@home-css.css"
            xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.inpe.worldwind.view.controllers.impl.SetupDatabaseController">
    <children>
        <Pane fx:id="paneSetup" prefHeight="480.0" prefWidth="213.0" styleClass="pane-setup">
            <children>
                <Label fx:id="lblLayerName" layoutX="7.0" prefHeight="25.0" prefWidth="143.0"
                       styleClass="pane-options-title" text="Database:"/>
                <Label fx:id="lblDatabase" layoutX="9.0" layoutY="108.0" styleClass="pane-options-subtitle"
                       text="Database:"/>
                <Separator layoutX="5.0" layoutY="24.0" opacity="0.3" prefHeight="0.0" prefWidth="200.0"/>
