                <PasswordField fx:id="pwdDatabase" layoutX="11.0" layoutY="212.0" prefHeight="25.0" prefWidth="193.0"/>
                <ComboBox fx:id="comboDatabase" layoutX="32.0" layoutY="45.0" prefWidth="150.0" promptText="Database"/>
                <ImageView fx:id="imgDatabaseStatus" fitHeight="50.0" fitWidth="70.0" layoutX="80.0" layoutY="356.0"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@database-status128x128-disconnected.png"/>
                    </image>
                </ImageView>
            </children>
        </Pane>
    </children>
</AnchorPane>
